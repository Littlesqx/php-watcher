    "require": {
        "php": "^7.1",
        "ext-swoole": ">=4.4.0",
        "yosymfony/resource-watcher": "^2.0",
        "symfony/process": "^4.3",
        "symfony/console": "^4.3",
        "symfony/yaml": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "seregazhuk\\PhpWatcher\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "tests\\": "tests"
        }
    },
    "bin": [
        "php-watcher"
    ],
    "require-dev": {
        "phpunit/phpunit": "^7.5",
        "swoft/swoole-ide-helper": "^4.4"
    }
}
